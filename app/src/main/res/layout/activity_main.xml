<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.questionnaire.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/co"
            style="@style/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct:" />

        <TextView
            android:id="@+id/sco"
            style="@style/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/inco"
            style="@style/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incorrect:" />

        <TextView
            android:id="@+id/sinco"
            style="@style/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sub"
        android:layout_below="@+id/linearlayout1">


        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/q1"
                style="@style/qs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Who is the 14th president of India ?" />

            <EditText
                android:id="@+id/a1"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="President Name"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/q2"
                style="@style/qs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Entomology is the science that studies:-" />

            <RadioGroup
                android:id="@+id/a2"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/a2a"
                    style="@style/as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Behavior of human beings" />

                <RadioButton
                    android:id="@+id/a2b"
                    style="@style/as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insects" />

                <RadioButton
                    android:id="@+id/a2c"
                    style="@style/as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The formation of rocks" />


                <RadioButton
                    android:id="@+id/a2d"
                    style="@style/as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine" />

            </RadioGroup>

            <TextView
                android:id="@+id/q3"
                style="@style/qs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.Hitler party which came into power in 1933 is known as:-" />

            <RadioGroup
                android:id="@+id/a3"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/a3a"
                    style="@style/as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Labour Party" />

                <RadioButton
                    android:id="@+id/a3b"
                    style="@style/as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nazi Party" />

                <RadioButton
                    android:id="@+id/a3c"
                    style="@style/as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ku-Klux-Klan" />

                <RadioButton
                    android:id="@+id/a3d"
                    style="@style/as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Democratic Party" />

            </RadioGroup>

            <TextView
                android:id="@+id/q4"
                style="@style/qs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.Atomic mass of Carbon can be :-" />

            <CheckBox
                android:id="@+id/a4cb1"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12" />

            <CheckBox
                android:id="@+id/a4cb2"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13" />

            <CheckBox
                android:id="@+id/a4cb3"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14" />

            <CheckBox
                android:id="@+id/a4cb4"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15" />

            <TextView
                android:id="@+id/q5"
                style="@style/qs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.Cell Membrane is made up of:-" />

            <CheckBox
                android:id="@+id/a5cb1"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proteins" />

            <CheckBox
                android:id="@+id/a5cb2"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbohydrates" />

            <CheckBox
                android:id="@+id/a5cb3"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fats" />

            <CheckBox
                android:id="@+id/a5cb4"
                style="@style/as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lipids" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="150sp"
            android:background="#000000"
            android:fontFamily="cursive"
            android:onClick="subans"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
